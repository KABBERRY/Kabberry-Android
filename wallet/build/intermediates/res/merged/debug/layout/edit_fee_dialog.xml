<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/rv_popup_border"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5.0dip"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/root_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@id/rl_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17.0sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@id/tv_title"
                android:paddingTop="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="@string/tx_fees_title"
                android:layout_centerVertical="true"
                style="@style/Base.TextAppearance.AppCompat.Medium" />
            <ImageView
                android:id="@id/iv_close"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:src="@drawable/ic_action_cancel"
                android:tint="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:textColor="@android:color/white"
                android:id="@id/fee_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="@string/enter_password"
                style="@style/SecondaryText" />
            <com.primestone.wallet.ui.widget.AmountEditView
                android:textColor="@color/actionbar_bg"
                android:id="@id/fee_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textIsSelectable="false" />
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip">
            <mehdi.sakout.fancybuttons.FancyButton
                android:textSize="17.0sp"
                android:id="@id/tv_default"
                android:paddingLeft="5.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="5.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_centerVertical="true"
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_text="@string/button_default"
                fancy:fb_textColor="@color/white"
                fancy:fb_focusColor="@color/white" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:textSize="17.0sp"
                android:id="@id/tv_confirm"
                android:paddingLeft="5.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="5.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_text="@string/button_save"
                fancy:fb_textColor="@color/white"
                fancy:fb_focusColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>