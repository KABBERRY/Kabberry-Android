<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/background_v1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.view.ViewPager
        android:id="@id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/pager_title_strip" />
    <!--<View android:id="@id/v_devider"-->
        <!--android:background="@drawable/gradient_tab"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1.0dip"-->
        <!--android:layout_above="@id/pager_title_strip" />-->
    <android.support.design.widget.TabLayout
        android:id="@id/pager_title_strip"
        android:focusable="false"
        android:layout_width="fill_parent"
        android:layout_height="?android:actionBarSize"
        android:measureAllChildren="true"
        android:layout_alignParentBottom="true"
        app:tabIndicatorHeight="0.0dp"
        app:tabMaxWidth="0.0dip"
        app:tabPaddingStart="0.0dip"
        app:tabPaddingTop="0.0dip"
        app:tabPaddingEnd="0.0dip"
        app:tabPaddingBottom="0.0dip"
        style="@style/PagerTabStrip" />
</RelativeLayout>