<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@android:color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:gravity="top"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@id/public_key"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/gray_54_sec_text_icons"
                    android:id="@id/request_public_key_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receive_address_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:textSize="@dimen/receive_address"
                    android:typeface="monospace"
                    android:id="@id/request_public_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/request_public_key_label"
                    style="@style/NormalText" />
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3.0dip"
                android:minWidth="500.0dip">
                <TextView
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/label_request" />
                <FrameLayout
                    android:id="@id/ll_qrcode"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingLeft="10.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@id/qr_code"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/qr_code_normal_bg"
                        android:layout_width="@dimen/qr_code_size"
                        android:layout_height="@dimen/qr_code_size"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginBottom="5.0dip" />
                </FrameLayout>
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@id/request_address_info"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receive_address_label"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        style="@style/SecondaryText" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/request_address_view"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:paddingBottom="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/request_address_info">
                        <TextView
                            android:id="@id/request_address_label"
                            android:textSize="@dimen/receive_address"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="5.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/NormalText" />
                        <TextView
                            android:id="@id/request_address"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SmallHelpText" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:textColor="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="@string/trans_name" />
            <EditText
                android:textColor="#929293"
                android:background="@color/primary_500"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:hint="@string/enter_name"
                android:textColorHint="#929293"/>
            <!--<View-->
                <!--android:background="@color/bg_list_selected"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.6dip"-->
                <!--android:layout_marginTop="0.6dip" />-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">
                <com.primestone.wallet.ui.widget.AmountEditView
                    android:id="@id/request_coin_amount"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
                <com.primestone.wallet.ui.widget.AmountEditView
                    android:id="@id/request_local_amount"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
            </LinearLayout>
            <!--<View-->
                <!--android:background="@color/bg_list_selected"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.0dip" />-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="3.0dip"
                android:weightSum="2.0">
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:id="@id/tv_new_address"
                    android:paddingTop="4.0dip"
                    android:paddingBottom="4.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dip"
                    android:text="@string/action_new_address"
                    android:layout_weight="1.0" />
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:id="@id/tv_edit_lebel"
                    android:paddingTop="4.0dip"
                    android:paddingBottom="4.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dip"
                    android:text="@string/action_edit_label"
                    android:layout_weight="1.0" />
            </LinearLayout>
            <mehdi.sakout.fancybuttons.FancyButton
                android:textSize="15.0sp"
                android:layout_gravity="center_horizontal"
                android:id="@id/view_previous_addresses"
                android:paddingLeft="15.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="15.0dip"
                android:paddingBottom="5.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_text="@string/view_previous_addresses"
                fancy:fb_textColor="@color/app_gold"
                fancy:fb_radiusTopLeft="4.0dip"
                fancy:fb_radiusTopRight="4.0dip"
                fancy:fb_radiusBottomLeft="4.0dip"
                fancy:fb_radiusBottomRight="4.0dip"
                fancy:fb_borderColor="@color/app_gold"
                fancy:fb_borderWidth="1.5dip"
                fancy:fb_focusColor="@color/primary_900"
                style="@style/BorderlessButtonLink" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>