<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/background_v1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coinomi="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="top"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <RelativeLayout
                    android:background="@color/background_v1"
                    android:padding="5.0dip" android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@id/amount_to_send_label"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/amount_to_send_label"
                        style="@style/SecondaryText" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:text="@string/label_send"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip">
                        <RelativeLayout
                            android:id="@id/rl_pay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip">
                            <TextView
                                android:textSize="16.0sp"
                                android:textColor="@color/white"
                                android:gravity="center_vertical"
                                android:id="@id/pay_to_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:layout_marginRight="3.0dip"
                                android:text="@string/to"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                style="@style/SecondaryText" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/send_to_address_container"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/address_button_container"
                            android:layout_below="@id/rl_pay">
                            <RelativeLayout
                                android:padding="5.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <AutoCompleteTextView
                                    android:id="@id/send_to_address"
                                    android:textColor="@color/white"
                                    android:background="@color/primary_500"
                                    android:padding="5.0dip"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/send_coins_fragment_receiving_address_tip"
                                    android:textColorHint="#9d9d9e"
                                    android:singleLine="true"
                                    android:textCursorDrawable="@drawable/color_cursor"
                                    android:layout_toLeftOf="@id/scan_qr_code"
                                    android:layout_centerVertical="true"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:imeOptions="actionNext|flagNoExtractUi"
                                    style="@style/NormalText" />
                                <com.primestone.wallet.ui.widget.AddressView
                                    android:id="@id/send_to_address_static"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/quarter_standard_margin"
                                    fancy:show_coin_icon="true" />
                                <ImageButton
                                    android:id="@id/scan_qr_code"
                                    android:background="@null"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3.0dip"
                                    android:src="@drawable/qr_code"
                                    android:tint="@color/white"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/scan_qr_code" />
                            </RelativeLayout>
                            <View
                                android:background="@color/bg_list_selected"
                                android:layout_width="fill_parent"
                                android:layout_height="0.6dip" />
                            <TextView
                                android:id="@id/address_error_message"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5.0dip"
                                android:layout_marginTop="3.0dip"
                                android:text="@string/address_error"
                                style="@style/ErrorText" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/address_button_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/send_to_address_container"
                            android:layout_alignParentRight="true">
                            <ImageButton
                                android:id="@id/erase_address"
                                android:background="@null"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/erase"
                                android:contentDescription="@string/erase_address" />
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/amounts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:baselineAligned="false"
                        android:weightSum="1.0">
                        <com.primestone.wallet.ui.widget.AmountEditView
                            android:id="@id/send_coin_amount"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5" />
                        <com.primestone.wallet.ui.widget.AmountEditView
                            android:id="@id/send_local_amount"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                    <View
                        android:background="@color/bg_list_selected"
                        android:layout_width="fill_parent"
                        android:layout_height="0.6dip"
                        android:layout_marginTop="5.0dip" />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@id/amount_error_message"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ErrorText" />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@id/amount_warning_message"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WarningText" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15.0sp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:id="@id/tv_balance"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="4.0dip"
                            android:paddingBottom="4.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:text="@string/available"
                            android:layout_alignParentRight="true" />
                        <TextView
                            android:textSize="15.0sp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:id="@id/tv_useallfund"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="4.0dip"
                            android:paddingBottom="4.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:text="@string/action_empty_wallet"
                            android:drawableLeft="@drawable/ic_allfund"
                            android:drawablePadding="5.0dip"
                            android:drawableStart="@drawable/ic_allfund" />
                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:layout_gravity="center_horizontal"
                    android:id="@id/tx_message_add_remove"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/tx_message_public_add"
                    style="@style/BorderlessButtonLink" />
                <TextView
                    android:id="@id/tx_message_label"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/half_standard_margin"
                    android:text="@string/tx_message_public"
                    style="@style/SecondaryText" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <EditText android:id="@id/tx_message"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />
                    <TextView
                        android:id="@id/tx_message_counter"
                        android:paddingRight="@dimen/quarter_standard_margin"
                        android:paddingBottom="@dimen/half_standard_margin"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/tx_message"
                        android:layout_alignBottom="@id/tx_message"
                        style="@style/NormalText" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_gravity="bottom|center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip">
                <mehdi.sakout.fancybuttons.FancyButton
                    android:layout_centerHorizontal="true"
                    android:textSize="18.0sp"
                    android:id="@id/send_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="80dp"
                    android:paddingLeft="80dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="25.0dip"
                    android:textStyle="bold"
                    fancy:fb_defaultColor="#89b915"
                    fancy:fb_text="@string/button_send"
                    fancy:fb_textColor="@color/white"
                    fancy:fb_radiusTopLeft="4.0dip"
                    fancy:fb_radiusTopRight="4.0dip"
                    fancy:fb_radiusBottomLeft="4.0dip"
                    fancy:fb_radiusBottomRight="4.0dip"
                    fancy:fb_focusColor="#ee4e10" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>