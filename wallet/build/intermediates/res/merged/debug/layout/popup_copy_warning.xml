<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/root_layout"
    android:background="@color/primary_500"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:id="@id/lbl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:paddingBottom="10dp"
        android:text="@string/coin_warning"
        android:background="@drawable/rv_popup_border_02"
        style="@style/Base.TextAppearance.AppCompat.Medium" />

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:textSize="15.0sp"
        android:textColor="@color/white"
        android:id="@id/lbl_warning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:text="@string/copy_info" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="5.0dip"
        android:background="@drawable/rv_popup_border_01">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@id/tv_no"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingTop="4.0dip"
            android:textSize="17.0sp"
            fancy:fb_borderColor="@color/white"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="@android:color/transparent"
            fancy:fb_text="Cancel"
            fancy:fb_textColor="@color/white" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:textSize="17.0sp"
            android:id="@id/tv_yes"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_borderColor="@color/white"
            fancy:fb_text="OK"
            fancy:fb_textColor="@color/white"
            fancy:fb_focusColor="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>