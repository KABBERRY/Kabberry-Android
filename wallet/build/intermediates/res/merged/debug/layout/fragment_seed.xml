<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/background_v1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/primary_500"
        android:layout_width="fill_parent"
        android:layout_height="?android:actionBarSize">
        <ImageView
            android:id="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@id/tv_title_back"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_wallet"
            android:textStyle="italic"
            android:layout_toRightOf="@id/iv_back"
            android:layout_centerVertical="true"
            style="@style/Base.TextAppearance.AppCompat.Title" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/copy_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:src="@drawable/ic_copy"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@id/seed_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:tint="@color/primary_900"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="?android:actionBarSize"
                android:text="@string/write_seed" />
            <RelativeLayout
                android:background="@color/primary_500"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView android:textSize="14.0sp"
                            android:textColor="#2aa1d3"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_horizontal"
                            android:id="@id/seed_regenerate_title"
                            android:background="@drawable/rv_solid_light"
                            android:paddingLeft="20.0dip"
                            android:paddingRight="5.0dip"
                            android:visibility="gone" android:layout_width="wrap_content" android:layout_height="24.0dip" android:layout_marginLeft="18.0dip" android:text="@string/seed_regenerate_title" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <TextView
                        android:textColor="#2aa1d3"
                        android:background="#2aa1d3"
                        android:layout_gravity="center_horizontal"
                        android:id="@id/seed_title"
                        android:paddingLeft="8.0dip"
                        android:paddingTop="3.0dip"
                        android:paddingRight="5.0dip"
                        android:paddingBottom="3.0dip"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dip"
                        android:layout_marginBottom="5.0dip"
                        android:text="@string/seed_title"
                         />
                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@id/seed_flowlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        zhy:max_select="-1" />
                    <TextView
                        android:id="@id/seed"
                        android:textColor="#2aa1d3"
                        android:background="#2aa1d3"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"
                        android:padding="3.0dip"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:lineSpacingMultiplier="1.2"
                        android:textIsSelectable="true"
                        style="@style/SeedText" />
                </LinearLayout>
            </RelativeLayout>
            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:textColor="@color/white"
                android:id="@id/seed_info"
                android:padding="5.0dip"
                android:gravity="start"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip"
                android:text="@string/seed_info"
                style="@style/NormalText" />
            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <CheckBox
                    android:theme="@style/MyCheckBox"
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:id="@id/backed_up_seed"
                    android:padding="0.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="@string/backed_up_seed" />
                <RelativeLayout android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:theme="@style/MyCheckBox"
                        android:textSize="15.0sp"
                        android:textColor="@color/navy_blue"
                        android:id="@id/accept_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I accept all  "
                        android:layout_centerVertical="true" />
                    <TextView
                        android:id="@id/tv_tos"
                        android:textSize="30.0sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tos_u"
                        android:layout_toRightOf="@id/accept_terms"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@id/button_next"
                android:textSize="18.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                fancy:fb_defaultColor="#2aa1d3"
                fancy:fb_text="@string/btn_write"
                fancy:fb_textColor="@color/white"
                fancy:fb_radiusTopLeft="4.0dip"
                fancy:fb_radiusTopRight="4.0dip"
                fancy:fb_radiusBottomLeft="4.0dip"
                fancy:fb_radiusBottomRight="4.0dip"
                fancy:fb_focusColor="@color/app_gold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>