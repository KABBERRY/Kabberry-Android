<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/ic_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginStart="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginTop="103dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/primestone_logo_white" />
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_btn"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:background="@color/white"
                android:padding="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/blockchain_grey"
                    android:id="@id/restore_wallet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restore_info"
                    android:layout_toLeftOf="@id/iv_scan"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:id="@id/iv_scan"
                    android:padding="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qr_code_menu"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/ll_btn"
            android:layout_width="fill_parent"
            android:layout_height="75.0dip"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_wallet"
                android:textColor="#3c8afc"
                android:layout_marginRight="70dp"
                android:textSize="16.0sp" />
            <TextView
                android:id="@id/create_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:padding="5.0dp"
                android:paddingBottom="5.0dip"
                android:paddingTop="5.0dip"
                android:text="@string/create_now"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:background="@drawable/round_corners_buttions"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>