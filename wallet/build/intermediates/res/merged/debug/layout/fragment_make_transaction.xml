<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/background_v1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:id="@id/transaction_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="5.0dip"
            style="@style/NormalText" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.primestone.wallet.ui.widget.TransactionAmountVisualizer
                android:gravity="center_vertical"
                android:id="@id/transaction_amount_visualizer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="@dimen/standard_margin" />
            <com.primestone.wallet.ui.widget.SendOutputTanns
                android:layout_gravity="center_vertical"
                android:id="@id/transaction_trade_withdraw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:layout_marginRight="3.0dip">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@id/enter_password_label"
                    android:paddingLeft="5.0dip"
                    android:paddingTop="3.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_password"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <EditText
                android:textColor="@color/white"
                android:id="@id/password"
                android:background="@color/primary_500"
                android:padding="5.0dip" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:hint="*****"
                android:textColorHint="@color/white"
                android:cursorVisible="true"
                android:ems="10"
                android:inputType="textPassword"
                android:textCursorDrawable="@color/white" />
            <View
                android:background="@color/bg_list_selected"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_marginBottom="20.0dip" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:enabled="true"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@id/button_confirm"
                android:paddingLeft="?android:actionBarSize"
                android:paddingTop="5.0dip"
                android:paddingRight="?android:actionBarSize"
                android:paddingBottom="5.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_confirm"
                fancy:fb_defaultColor="#ee4e10"
                fancy:fb_text="@string/button_confirm"
                fancy:fb_textColor="@color/white"
                fancy:fb_radiusTopLeft="3.0dip"
                fancy:fb_radiusTopRight="3.0dip"
                fancy:fb_radiusBottomLeft="3.0dip"
                fancy:fb_radiusBottomRight="3.0dip"
                fancy:fb_focusColor="#ee4e10"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
            <!--
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/powered_by_shapeshift" />
                -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>