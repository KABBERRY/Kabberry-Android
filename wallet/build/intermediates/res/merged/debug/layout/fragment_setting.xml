<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2e313a"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- MY ACCOUNT -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#22252e"
                android:layout_width="fill_parent"
                android:layout_height="10dip" />
            <TextView
                android:id="@id/lbl_ad"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:paddingTop="10.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:text="@string/my_account" />
            <View
                android:background="#5d3f73"
                android:layout_width="fill_parent"
                android:layout_height="1.2dip" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#454954"
                android:layout_marginBottom="5.0dip">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/white"
                    android:id="@id/tv_show_recovery"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_show_seed"
                    android:drawableRight="@drawable/ic_showme"
                    android:drawableEnd="@drawable/ic_showme" />
                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:textSize="11.0sp"
                    android:textColor="@color/white"
                    android:id="@id/tv_rph_info"
                    android:paddingLeft="10.0dip"
                    android:paddingTop="2.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/rp_info" />
                <View
                    android:background="#3b3f4a"
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dip" />
                <RelativeLayout
                    android:id="@id/rl_fee"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/title_activity_transaction_fees" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/bg_list_selected"
                        android:id="@id/tv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_activity_transaction_fees"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_activity_transaction_fees"
                        android:layout_below="@id/tv_fee"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
                <View
                    android:background="#3b3f4a"
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dip" />
                <TextView android:textSize="14.0sp"
                    android:textColor="@color/white"
                    android:id="@id/tv_restorewallet"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_title_restore_wallet" />
            </LinearLayout>
            <!--Security -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip">
                <TextView
                    android:id="@id/lbl_se"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/security"
                    android:textAllCaps="false" />
                <View
                    android:background="#5d3f73"
                    android:layout_width="fill_parent"
                    android:layout_height="1.2dip" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#454954"
                    android:layout_marginBottom="5.0dip">
                    <TextView android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:id="@id/tv_change_pass"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/change_pass"
                        android:drawableRight="@drawable/ic_change"
                        android:drawableEnd="@drawable/ic_change" />
                    <View
                        android:background="#3b3f4a"
                        android:layout_width="fill_parent"
                        android:layout_height="0.8dip" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:id="@id/tv_change_pin"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/change_pin"
                        android:drawableRight="@drawable/ic_change"
                        android:drawableEnd="@drawable/ic_change" />
                    <View
                        android:background="#3b3f4a"
                        android:layout_width="fill_parent"
                        android:layout_height="0.8dip" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:textSize="14.0sp"
                            android:textColor="@color/white"
                            android:id="@id/cb_pref_receive_address"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingBottom="2.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:button="@null"
                            android:text="@string/pref_title_manual_receiving_addresses"
                            android:drawableRight="@drawable/selector_checkbox"
                            style="@style/Checkbox" />
                        <TextView
                            android:textSize="10.0sp"
                            android:textStyle="italic"
                            android:textColor="@color/white"
                            android:paddingLeft="10.0dip"
                            android:paddingBottom="4.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pref_summary_manual_receiving_addresses" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--About PrimeStone Wallet-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:id="@id/lbl_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/action_about"
                    android:textAllCaps="false" />
                <View
                    android:background="#5d3f73"
                    android:layout_width="fill_parent"
                    android:layout_height="1.2dip" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#454954"
                    android:layout_marginBottom="3.0dip">
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:id="@id/tv_support"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_support" />
                    <View
                        android:background="@color/bg_dialog_title"
                        android:layout_width="fill_parent"
                        android:layout_height="0.6dip" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:id="@id/tv_about_app"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_activity_about"
                        android:drawableRight="@drawable/ic_action_next"
                        android:drawableEnd="@drawable/ic_action_next" />
                    <View
                        android:background="#3b3f4a"
                        android:layout_width="fill_parent"
                        android:layout_height="0.8dip" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/black"
                        android:id="@id/tv_tos"
                        android:padding="10.0dip"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_of_service_title" />
                    <View
                        android:background="#3b3f4a"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="0.6dip" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/black"
                        android:id="@id/tv_pnp"
                        android:padding="10.0dip"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy" />
                    <View
                        android:background="@color/bg_dialog_title"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="0.6dip" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/primary_700"
                        android:id="@id/tv_faqs"
                        android:padding="10.0dip"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/faqs"
                        android:drawableRight="@drawable/ic_action_next"
                        android:drawableEnd="@drawable/ic_action_next" />
                    <View
                        android:background="@color/bg_dialog_title"
                        android:layout_width="fill_parent"
                        android:layout_height="0.6dip" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/white"
                        android:id="@id/tv_logout"
                        android:padding="10.0dip"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/logout" />
                    <ListView
                        android:id="@id/coins_list"
                        android:paddingTop="@dimen/half_standard_margin"
                        android:paddingBottom="@dimen/half_standard_margin"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="false"
                        android:divider="@null"
                        android:dividerHeight="0.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>