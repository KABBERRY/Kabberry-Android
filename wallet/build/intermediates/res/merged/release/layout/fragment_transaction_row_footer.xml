<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_v1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coinomi="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7.0dip">
        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/lbl_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3.0dip" android:text="@string/confirmations" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/tx_status"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/to" />
    </LinearLayout>
    <View android:background="@color/bg_list_selected" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="0.6dip" />
    <LinearLayout
        android:orientation="vertical" android:id="@id/ll_date" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="7.0dip">
        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/tx_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip" android:text="@string/date_label" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/tx_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/to" />
    </LinearLayout>
    <View android:background="@color/bg_list_selected" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="0.6dip" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="7.0dip">
        <TextView android:textSize="15.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@id/lbl_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip"
            android:text="@string/transaction_id_label" />
        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@id/tx_id"
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/to" />
    </LinearLayout>
    <View android:background="@color/bg_list_selected" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="0.6dip" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:textSize="20.0sp"
        android:layout_gravity="center_horizontal"
        android:id="@id/block_explorer_link"
        android:paddingLeft="10.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        fancy:fb_defaultColor="#2aa1d3"
        fancy:fb_text="@string/view_at_explorer_link"
        fancy:fb_textColor="@color/white"
        fancy:fb_radiusTopLeft="3.0dip"
        fancy:fb_radiusTopRight="3.0dip"
        fancy:fb_radiusBottomLeft="3.0dip"
        fancy:fb_radiusBottomRight="3.0dip"
        fancy:fb_focusColor="#2aa1d3"
        style="@style/BorderlessButtonLink" />
</LinearLayout>