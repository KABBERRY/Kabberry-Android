<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coinomi="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_v1">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@id/ll_bal"
        android:paddingTop="20.0dip"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.primestone.wallet.ui.widget.Amount
            android:id="@id/account_exchanged_balance"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            coinomi:single_line="true" />
        <com.primestone.wallet.ui.widget.Amount
            android:gravity="center_horizontal"
            android:id="@id/account_balance"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            coinomi:show_big="true"
            coinomi:single_line="true" />
        <TextView
            android:textSize="15.0sp"
            android:textColor="@color/white"
            android:id="@id/blockheight_label"
            android:paddingBottom="5.0dip"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/block_height" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@id/connection_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/amount_margin_bottom"
            android:text="@string/loading"
            style="@style/ErrorText" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/primary_500"
        android:paddingTop="15.0dip"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@id/tv_local_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/coin_price" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.15in"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@id/ll_empty"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tab_bal_corners_style">
        <TextView
            android:textSize="@dimen/history_empty"
            android:textColor="#838487"
            android:gravity="top|center"
            android:id="@id/empty_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="@string/no_trans" />
        <View
            android:background="#333841"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@id/history_empty"
            android:textSize="@dimen/history_empty"
            android:textColor="#838487"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10.0dip"
            android:text="@string/history_empty" />
    </LinearLayout>
</LinearLayout>