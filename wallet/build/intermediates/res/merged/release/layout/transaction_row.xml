                            <!--android:layout_marginTop="@dimen/transaction_row_margin_direction"-->
                            <!--android:layout_marginBottom="@dimen/transaction_row_margin_direction"-->
                            <!--style="@style/TransactionRowDirectionFontIcon" />-->
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <!--<TextView-->
                <!--android:textSize="14.0sp"-->
