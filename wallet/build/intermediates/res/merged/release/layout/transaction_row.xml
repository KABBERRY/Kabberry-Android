<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/ll_root_layout"
        android:paddingTop="3.0dip"
        android:paddingBottom="2.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@id/ll_top"
                    android:padding="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@id/transaction_row_value"
                        android:textSize="16.0sp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingTop="3.0dip"
                        android:paddingBottom="3.0dip"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="130.0dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                    <!--android:background="@drawable/rv_pending"-->
                    <RelativeLayout
                        android:id="@id/ll_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!--<TextView-->
                            <!--android:textColor="@color/white"-->
                            <!--android:id="@id/transaction_row_message_font_icon"-->
                            <!--android:visibility="gone"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content" />-->
                        <TextView
                            android:id="@id/transaction_row_direction_text"
                            android:textSize="15.0sp"
                            android:textColor="@color/white"
                            android:paddingLeft="3.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/ll_blb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_trans">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@id/transaction_row_confirmations_font_icon"
                            android:padding="6.0dip"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_trans_0"
                            android:tint="@color/black" />
                    </LinearLayout>
                    <TextView
                        android:id="@id/transaction_row_time"
                        android:textSize="15.0sp"
                        android:textColor="@color/white"
                        android:paddingLeft="3.0dip"
                        android:paddingTop="3.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_trans"
                        android:textAllCaps="true"
                        style="@style/TransactionRowDate" />
                    <!--<ImageView-->
                        <!--android:id="@id/transaction_row_direction_font_icon"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_width="34.0dip"-->
                        <!--android:layout_height="34.0dip"-->
                        <!--android:layout_marginRight="-17.0dip"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:layout_toLeftOf="@id/transaction_row_value"-->
                        <!--android:layout_centerVertical="true" />-->
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_top">
                    <LinearLayout
                        android:id="@id/ll_icon"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">
                        <!--<ImageView-->
                            <!--android:textColor="@color/white"-->
