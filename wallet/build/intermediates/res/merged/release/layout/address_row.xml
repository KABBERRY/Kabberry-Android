<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/primary_900" android:id="@id/address_row_label" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/NormalText" />
        <TextView android:typeface="monospace" android:textColor="@color/app_gold" android:id="@id/address_row_address" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/SmallHelpText" />
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textColor="@color/bg_list_selected" android:id="@id/address_row_usage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" style="@style/SecondaryText" />
            <TextView android:textSize="@dimen/address_row_status_text_size" android:gravity="center" android:id="@id/address_row_usage_font_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/SecondaryText" />
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/bg_list_selected" android:layout_width="fill_parent" android:layout_height="0.6dip" />
</LinearLayout>