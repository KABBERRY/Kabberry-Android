<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/rv_popup_border"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="17.0sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@id/tv_title"
        android:paddingTop="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:text="@string/change_pass"
        style="@style/Base.TextAppearance.AppCompat.Medium" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow
                android:layout_marginTop="5.0dip">
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:paddingTop="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:text="@string/old_pass" />
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="15.0sp"
                        android:textColor="@color/white"
                        android:id="@id/et_old_pass"
                        android:background="@color/primary_500"
                        android:paddingLeft="3.0dip"
                        android:paddingTop="4.0dip"
                        android:paddingBottom="4.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:imeOptions="actionNext" />
                    <View
                        android:background="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip">
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:paddingTop="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newpass" />
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="15.0sp"
                        android:textColor="@color/white"
                        android:id="@id/et_new_pass"
                        android:background="@color/primary_500"
                        android:paddingLeft="3.0dip"
                        android:paddingTop="4.0dip"
                        android:paddingBottom="4.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:imeOptions="actionNext" />
                    <View
                        android:background="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip">
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:paddingTop="4.0dip"
                    android:paddingBottom="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirmpass" />
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="15.0sp"
                        android:textColor="@color/white"
                        android:id="@id/et_cnf_pass"
                        android:background="@color/primary_500"
                        android:paddingLeft="3.0dip"
                        android:paddingTop="4.0dip"
                        android:paddingBottom="4.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:imeOptions="actionDone" />
                    <View
                        android:background="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:paddingTop="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip">
        <mehdi.sakout.fancybuttons.FancyButton
            android:textSize="17.0sp"
            android:id="@id/confirm_cancel"
            android:paddingLeft="10.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_text="@string/button_cancel"
            fancy:fb_textColor="@color/white"
            fancy:fb_focusColor="@android:color/transparent" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:textSize="17.0sp"
            android:id="@id/confirm_unpair"
            android:paddingLeft="10.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_text="@string/update"
            fancy:fb_textColor="@color/white"
            fancy:fb_focusColor="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>