<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.primestone.wallet.coin"
    android:versionCode="2"
    android:versionName="2.0.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.screen.landscape"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:name="com.primestone.wallet.WalletApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.primestone.wallet.ui.WalletActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoTitleBar"
            android:windowSoftInputMode="adjustResize" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.IntroActivity"
            android:theme="@style/AppTheme.NoTitleBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.primestone.wallet.ui.AboutActivity"
            android:theme="@style/AppTheme.NoTitleBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.primestone.wallet.ui.SignTransactionActivity"
            android:theme="@style/AppTheme.NoTitleBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.primestone.wallet.ui.ScanActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/AppTheme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.primestone.wallet.ui.TransactionDetailsActivity"
            android:label="@string/title_activity_transaction_details"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity
            android:name="com.primestone.wallet.ui.ExchangeRatesActivity"
            android:label="@string/title_activity_exchange_rates"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.WalletActivity" />
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.PreviousAddressesActivity"
            android:label="@string/title_activity_previous_addresses"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity
            android:name="com.primestone.wallet.ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.WalletActivity" />
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.ShowSeedActivity"
            android:label="@string/title_activity_show_seed"
            android:theme="@style/AppTheme.NoTitleBar" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.TradeActivity"
            android:label="@string/title_activity_trade"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.WalletActivity" />
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.ExchangeHistoryActivity"
            android:label="@string/title_activity_exchange_history"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.TradeActivity" />
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.TradeStatusActivity"
            android:label="@string/title_activity_exchange_status"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.primestone.wallet.ui.SignVerifyMessageActivity"
            android:label="@string/title_activity_sign_verify_message"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.primestone.wallet.ui.AccountDetailsActivity"
            android:label="@string/title_activity_account_details"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.primestone.wallet.ui.SweepWalletActivity"
            android:label="@string/title_activity_sweep_wallet"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustNothing" />
        <activity
            android:name="com.primestone.wallet.ui.FeesSettingsActivity"
            android:label="@string/title_activity_transaction_fees"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.SettingsActivity" />
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.DebuggingActivity"
            android:label="@string/title_activity_debugging"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.SettingsActivity" />
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.PinEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoTitleBar" />

        <category android:name="android.intent.category.HOME" />

        <provider
            android:name="com.primestone.wallet.ExchangeRatesProvider"
            android:authorities="com.primestone.wallet.coin.exchange_rates"
            android:exported="false" />
        <provider
            android:name="com.primestone.wallet.AddressBookProvider"
            android:authorities="com.primestone.wallet.coin.address_book"
            android:exported="false" />
        <provider
            android:name="com.primestone.wallet.ExchangeHistoryProvider"
            android:authorities="com.primestone.wallet.coin.exchange_history"
            android:exported="false" />

        <service
            android:name="com.primestone.wallet.service.CoinServiceImpl"
            android:exported="false" />

        <activity
            android:name="com.primestone.wallet.ui.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme.NoTitleBar" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.primestone.wallet.ui.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.acra.dialog.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="org.acra.sender.SenderService"
            android:exported="false"
            android:process=":acra" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.primestone.wallet.coin.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>