<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/root_layout"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@id/ll_toolbar"
        android:background="@color/background_v1"
        android:layout_width="fill_parent"
        android:layout_height="?android:actionBarSize">
        <TextView
            android:id="@id/tv_title_back"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="@string/title_activity_about"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="10.0dip"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_back"
            style="@style/Base.TextAppearance.AppCompat.Title" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/ll_toolbar">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="@drawable/ic_bg"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@drawable/kabberry_logo_white" />
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/about_coinomi_copyright" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40.0dip"
            android:orientation="horizontal"
            android:weightSum="2.0"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@id/tv_tos"
                android:textSize="10.0sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/terms_of_service_title"
                android:textAllCaps="true"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/about_tview_background" />
            <TextView
                android:id="@id/tv_pnp"
                android:textSize="10.0sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/privacy_policy"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/about_tview_background" />
            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>